{
  "name": "Spellify",
  "description": "Fix spelling mistakes on websites",
  "version": "0.0.1",
  "manifest_version": 2,
  "permissions": [
    "http://*/*",
    "https://*/*",
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "browser_action": {
    "default_icon": "32.png",
    "default_title": "Fix a spelling mistake",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["replace.js"],
      "run_at": "document_end"
    }
  ]
}